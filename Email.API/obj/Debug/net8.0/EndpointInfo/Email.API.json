{
  "openapi": "3.0.4",
  "info": {
    "title": "Email.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Email/send": {
      "post": {
        "tags": [
          "Email"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailMessage"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailMessage"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmailMessage"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Email/send-invalid": {
      "post": {
        "tags": [
          "Email"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmailAddress": {
        "required": [
          "email",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EmailMessage": {
        "type": "object",
        "properties": {
          "from": {
            "$ref": "#/components/schemas/EmailAddress"
          },
          "to": {
            "$ref": "#/components/schemas/EmailAddress"
          },
          "subject": {
            "type": "string",
            "nullable": true
          },
          "body": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Email"
    }
  ]
}